{% block stylesheets %}
	{{
            encore_entry_link_tags('app')
        }}
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('app') }}
	{{ encore_entry_script_tags('datepicker') }}
	{{ encore_entry_script_tags('toast') }}
	{{ encore_entry_script_tags('picture-preview') }}
	{# {{ encore_entry_script_tags('file-input-display')}} #}
{% endblock %}
{% block body %}

	<ul
		class="list-group"
		style="background-color:azure">

		{% for EFNC in EFNCs|sort((a,b) => b.id <=> a.id) %}
			<div
				class="ml-auto">
				<strong>
					<a
						target="_top"
						href=" {{path('app_form_display_modification', { 'efncID': EFNC.id})}}"
						{% if EFNC.Status is same as (null) %} class="list-group-item list-group-item-action list-group-item-light  "
						{% elseif EFNC.Status is same as (true) %} class="list-group-item list-group-item-action list-group-item-success  "
						{% else %} class="list-group-item list-group-item-action list-group-item-warning"
						{% endif %}>

						<div
							class="d-flex justify-content-between align-items-center">
							<div>
								{{ EFNC.Title|upper|split('_')|first }}
								{{ EFNC.id|upper}}
							</div>
							<div>
								|
							</div>
							<div>
								{{ EFNC.nonConformityOrigin.name|upper }}
							</div>
							<div>
								|
							</div>
							<div>
								{{ EFNC.ProductDesignation|upper }}
							</div>
							<div>
								|
							</div>
							<div>
								{{EFNC.Project.name|upper }}
							</div>
							<div>
								|
							</div>
							<div>
								{{EFNC.CreatedAt|date('d/m/Y') }}
							</div>

						</div>
					</a>
				</strong>
			</div>
		{% endfor %}
	</ul>
{% endblock %}
