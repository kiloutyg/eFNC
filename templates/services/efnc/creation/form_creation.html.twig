{% extends 'base.html.twig' %}

{% block title %}
	Création de fiche
{% endblock %}


{% block body %}

	<div
		class="card border-0 shadow rounded-3 my-5 bg-secondary">
		<div
			class="card-body">
			<h3
				class="text-white mb-5"
				style="color:white">
				<strong>
					Création de Fiche de Non-Conformité :
				</strong>
			</h3>
			{{ form_start(form, { attr: { class: 'd-flex flex-column ', id: 'formCreationForm', method: 'POST', enctype: 'multipart/form-data' }, action: path('app_form_creation') }) }}

			<div
				class="row g-3">
				<div
					class="col-md-auto">
					{{ form_label(form.Title, 'Titre de la eFNC :', { label_attr: { class: 'form-label', for: 'Title' } }) }}
					{{ form_widget(form.Title, { attr: { class: 'form-control', id: 'Title', placeholder: 'Titre de la eFNC', required: 'true' } }) }}
				</div>

				<div
					class="col-md-auto">
					{{ form_label(form.Creator, "Nom de l'émetteur :", { label_attr: { class: 'form-label', for: 'Creator' } }) }}
					{{ form_widget(form.Creator, { attr: { class: 'form-control', id: 'Creator', placeholder: "Nom de l'émetteur", required: 'true' } }) }}
				</div>

				<div
					class="col-md-auto">
					{{ form_label(form.DetectionDate, 'Date de Détection :', { label_attr: { class: 'form-label', for: 'DetectionDate' } }) }}
					{{ form_widget(form.DetectionDate, ) }}
				</div>

				<div
					class="col-md-auto">
					{{ form_label(form.DetectionTime, 'Heure de Détection :', { label_attr: { class: 'form-label', for: 'DetectionTime' } }) }}
					{{ form_widget(form.DetectionTime, ) }}
				</div>

				<div
					class="col-md-auto">
					{{ form_label(form.Team, 'Equipe :', { label_attr: { class: 'form-label', for: 'Team' } }) }}
					{{ form_widget(form.Team, { attr: { class: 'form-control', id: 'Team', placeholder: 'Equipe', required: 'true' } }) }}
				</div>

				<div
					class="col-md-auto">
					{{ form_label(form.DetectionPlace, 'Lieu de détection :', { label_attr: { class: 'form-label', for: 'DetectionPlace' } }) }}
					{{ form_widget(form.DetectionPlace, { attr: { class: 'form-control', id: 'DetectionPlace', placeholder: 'Lieu de détection', required: 'true' } }) }}
				</div>

				<div
					class="col-md-auto">
					{{ form_label(form.ProductDesignation, 'Désignation Produit :', { label_attr: { class: 'form-label', for: 'ProductDesignation' } }) }}
					{{ form_widget(form.ProductDesignation, { attr: { class: 'form-control', id: 'ProductDesignation', placeholder: 'Désignation Produit', required: 'true' } }) }}
				</div>

				<div
					class="col-md-auto">
					{{ form_label(form.Project, 'Projet :', { label_attr: { class: 'form-label', for: 'Project' } }) }}
					{{ form_widget(form.Project, { attr: { class: 'form-control', id: 'Project', placeholder: 'Projet', required: 'true' } }) }}
				</div>

				<div
					class="col-md-auto">
					{{ form_label(form.UAP, 'UAP :', { label_attr: { class: 'form-label', for: 'UAP' } }) }}
					{{ form_widget(form.UAP, { attr: { class: 'form-control', id: 'UAP', placeholder: 'UAP', required: 'true' } }) }}
				</div>

				<div
					class="col-md-auto">
					{{ form_label(form.NonConformityOrigin, 'Lieu de création de la Non-Conformité :', { label_attr: { class: 'form-label', for: 'NonConformityOrigin' } }) }}
					{{ form_widget(form.NonConformityOrigin, { attr: { class: 'form-control', id: 'NonConformityOrigin', placeholder: 'Lieu de création de la Non-Conformité', required: 'true' } }) }}
				</div>

				<div
					class="col-md-auto">
					{{ form_label(form.Quantity, 'Nombre de Pièces Non-Conforme :', { label_attr: { class: 'form-label', for: 'Quantity' } }) }}
					{{ form_widget(form.Quantity, { attr: { class: 'form-control', id: 'Quantity', placeholder: 'Nombre de Pièces Non-Conforme', required: 'true' } }) }}
				</div>

				<div
					class="col-md-auto">
					{{ form_label(form.AnomalyType, "Type de d'anomalie :", { label_attr: { class: 'form-label', for: 'AnomalyType' } }) }}
					{{ form_widget(form.AnomalyType, { attr: { class: 'form-control', id: 'AnomalyType', placeholder: "Type de d'anomalie", required: 'true' } }) }}
				</div>

				<div
					class="col-md-auto">
					{{ form_label(form.QuantityToBlock, 'Nombre de pièces à bloquer :', { label_attr: { class: 'form-label', for: 'QuantityToBlock' } }) }}
					{{ form_widget(form.QuantityToBlock, { attr: { class: 'form-control', id: 'QuantityToBlock', placeholder: 'Nombre de pièces à bloquer', required: 'true' } }) }}
				</div>

				<div
					class="col-md-auto">
					{{ form_label(form.DetailedDescription, 'Description détaillée :', { label_attr: { class: 'form-label', for: 'DetailedDescription' } }) }}
					{{ form_widget(form.DetailedDescription, { attr: { class: 'form-control', id: 'DetailedDescription', placeholder: 'Description détaillée' } }) }}
				</div>
				<div
					class="col-md-auto">
					{{ form_label(form.SAPReference, 'Référence SAP :', { label_attr: { class: 'form-label', for: 'SAPReference' } }) }}
					{{ form_widget(form.SAPReference, { attr: { class: 'form-control', id: 'SAPReference', placeholder: 'Référence SAP' } }) }}
				</div>
				<div
					class="col-md-auto">
					{{ form_label(form.TraceabilityPicture, 'Photo de Traçabilité Obligatoire :', { label_attr: { class: 'form-label', for: 'TraceabilityPicture' } }) }}
					{{ form_widget(form.TraceabilityPicture, { attr: { class: 'form-control', id: 'TraceabilityPicture', placeholder: 'Photo de Traçabilité Obligatoire' } }) }}
				</div>
				<div
					class="col-md-auto">
					{{ form_label(form.NCpicture, 'Photo de non-conformité :', { label_attr: { class: 'form-label', for: 'NCpicture' } }) }}
					{{ form_widget(form.NCpicture, { attr: { class: 'form-control', id: 'NCpicture', placeholder: 'Photo de non-conformité' } }) }}
				</div>


			</div>

			<div
				class="d-grid gap-2 d-md-flex justify-content-md-center mt-5">
				<button
					type="submit"
					class="btn btn-primary mb-3 submit-upload-modification">
					Créer
				</button>
			</div>

			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
